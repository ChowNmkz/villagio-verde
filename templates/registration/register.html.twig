{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <h1>Inscription</h1>

                {{ form_start(form) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.username,
                        { label: 'Nom d\'utilisateur'
                        }) }}

                    {{ form_row(form.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(form.agreeTerms) }}

                    <button type="submit" class="btn">Register</button>
            </div>
            <div class="col-6">
                <h1>Informations compl√©mentaires</h1>
                {{ form_row(form.individualFirstname) }}
                {{ form_row(form.individualLastname) }}
                {{ form_row(form.phone) }}
                <hr>
                {{ form_row(form.deliveryAddress) }}
                {{ form_row(form.deliveryZipcode) }}
                {{ form_row(form.deliveryCity) }}
d                {{ form_row(form.billAddress) }}
                {{ form_row(form.billZipcode) }}
                {{ form_row(form.billCity) }}
                {{ form_row(form.custType) }}

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    {% endblock %}
