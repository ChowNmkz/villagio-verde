{% extends 'base.html.twig' %}

{% block title %}Profil de {{ app.user.userIdentifier }}{% endblock %}

{% block body %}
    <div class="container">
        <div>
            <h1>Profil de {{ app.user.userIdentifier }}</h1>

                {# display email #}

            <label for="emailAddress" class="mt-3">Votre adresse E-Mail</label>
            <input class="form-control form-control-sm" type="email" value="{{ app.user.userIdentifier }}" id="emailAddress" readonly="readonly">

                {# display name #}

                <div class="row">
                    <label for="firstLastName" class="mt-3">Nom & Pr√©nom</label>
                    <div class="col-6">
                        <input class="form-control form-control-sm" type="text" value="{{ app.user.employee.lastname }}" id="firstLastName" readonly="readonly">
                    </div>
                    <div class="col-6">
                        <input class="form-control form-control-sm" type="text" value="{{ app.user.employee.firstname }}" id="firstLastName" readonly="readonly">
                    </div>
                </div>
            <label for="gender" class="mt-3">Votre genre</label>
            <input class="form-control form-control-sm" type="text" value="{{ app.user.employee.gender }}" id="gender" readonly="readonly">

                {# display address #}
                        <label for="address" class="mt-3">Adresse</label>
                        <input class="form-control form-control-sm mb-1" type="text" value="{{ app.user.employee.address }}" id="address" readonly="readonly">
                        <input class="form-control form-control-sm mb-1" type="text" value="{{ app.user.employee.zipcode }}" id="zipcode" readonly="readonly">
                        <input class="form-control form-control-sm mb-1" type="text" value="{{ app.user.employee.city }}" id="city" readonly="readonly">








        </div>
    </div>

{% endblock %}
