                <div class="carte col-category " id={{ cat.id }}>
                    <img class="carte-image" src="/img/category/{{ cat.image }}" a lt="Carte de {{ cat.name }}"/>
                    <div class="carte-opacite"></div>
                    <span class="carte-titre">{{ cat.name }}</span>
                </div>
            {% endfor %}
        {% elseif app.request.get('_route') == 'app_home_category' %}
            {% for catparent in category.categories %}
                <div class="card" style="width: 18rem;">
                    <img src="/img/category/{{catparent.image}}" class="card-img-top" alt="...">
                    <div class="card-body mx-auto">
                        <a href="{{ path('app_home_productByCategory', {id: catparent.id}) }}" class="btn btn-dark">{{catparent.name}}</a>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
        </div>
    </div>
{% endblock %}
