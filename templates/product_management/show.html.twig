{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">
        <table class="table">
            <tbody>
                <tr>
                    <th>Identifiant</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Prix d'achat</th>
                    <td>{{ product.buyPrice }}</td>
                </tr>
                <tr>
                    <th>Prix de vente</th>
                    <td>{{ product.sellPrice }}</td>
                </tr>
                <tr>
                    <th>Stock</th>
                    <td>{{ product.stock }}</td>
                </tr>

                <tr>
                    <th>Publié ?</th>
                    <td>{{ product.publish ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Créé le : </th>
                    <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Mis à jour le :</th>
                    <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <span class="col-4">
                <a href="{{ path('app_product_management_index') }}" class="btn btn-dark">Retour à la liste</a>
            </span>
            <span class="col-4">
                <a href="{{ path('app_product_management_edit', {'id': product.id}) }}" class="btn btn-warning">Editer</a>
            </span>
            <span class="col-4">
                {{ include('product_management/_delete_form.html.twig') }}
            </span>
        </div>
    </div>
{% endblock %}
