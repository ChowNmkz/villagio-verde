{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}
{% block header %}{% endblock %}
{% block body %}
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-6">
                {{ form_row(form.firstname) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.gender) }}
            </div>
            <div class="col-6">
                {{ form_row(form.address) }}
                {{ form_row(form.zipcode) }}
                {{ form_row(form.city) }}
            </div>
        </div>
        {{ form_row(form.post) }}
        <div class="row">
            <div class="col-6">
                {{ form_row(form.email) }}
            </div>
            <div class="col-6">
                {{ form_row(form.username) }}
            </div>
        </div>
        {{ form_row(form.plainPassword) }}

        <div class="d-grid mt-4 mb-5">
            <button type="submit" class="btn btn-block btn-dark btn-sm">Cr√©er le compte</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}